<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_menu_module"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/top_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera"
        />
    <ImageView
        android:id="@+id/top_menu_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/top_menu_camera"
        android:layout_marginLeft="20dp"
        android:src="@android:drawable/ic_menu_more"/>
    <TextView
        android:id="@+id/top_menu_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/top_menu_more"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:text="关注"/>
    <TextView
        android:id="@+id/top_menu_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/top_menu_follow"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:text="推荐"/>
    <TextView
        android:id="@+id/top_menu_near"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/top_menu_recommend"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="附近"/>

</RelativeLayout>
