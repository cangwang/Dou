<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/disc_menu_module"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_alignParentRight="true"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/disc_menu_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/disc_menu_heart"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_camera"
        />
    <ImageView
        android:id="@+id/disc_menu_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/disc_menu_chat"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_input_add"/>
    <ImageView
        android:id="@+id/disc_menu_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/disc_menu_share"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_call"/>
    <ImageView
        android:id="@+id/disc_menu_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/disc_menu_disc"
        android:layout_marginBottom="30dp"
        android:src="@android:drawable/ic_menu_share"/>
    <ImageView
        android:id="@+id/disc_menu_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_more"/>
</RelativeLayout>
