<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_menu_module"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    android:layout_marginLeft="20dp"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/title_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精选" />
    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_sort"
        android:text="你好"
        />
    <TextView
        android:id="@+id/title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_name"
        android:text="I'm cangwang"/>

    <TextView
        android:id="@+id/title_scroll"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_description"
        android:text="how about douyin"/>
</RelativeLayout>
